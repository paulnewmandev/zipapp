<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/frgProfileImage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_avatar_profile"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/icons_size"
                android:src="@drawable/logo_color"
                app:civ_border_color="@color/primaryZip"
                app:civ_border_width="2dp" />

            <TextView
                android:id="@+id/frgProfileNameUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/icons_size"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:textSize="24sp"
                tools:text="Fulano Perez" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView19"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/size_low_margin"
                        android:text="Cuentas Asociadas"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/size_normal_text"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/frgProfileSocial"
                        android:layout_width="@dimen/social_icons"
                        android:layout_height="@dimen/social_icons"
                        android:layout_marginTop="@dimen/normal_margin"
                        app:srcCompat="@drawable/facebook_logo_button_blue" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/textView20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Notificaciones"
                        android:textAllCaps="false"
                        android:textColor="@color/colorBlack"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <Switch
                        android:id="@+id/frgProfileNotification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/frgProfilePreferences"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="32dp"
                android:background="@drawable/background_rounded_black"
                android:paddingBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp"
                android:text="Preferencias"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/frgProfileContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/normal_margin"
                android:background="@drawable/background_rounded_black"
                android:paddingLeft="@dimen/icons_size"
                android:paddingTop="@dimen/size_low_margin"
                android:paddingRight="@dimen/icons_size"
                android:paddingBottom="@dimen/size_low_margin"
                android:text="Contáctanos"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="@dimen/size_low_text" />

            <TextView
                android:id="@+id/frgProfileConditions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/size_low_margin"
                android:background="@drawable/background_rounded_black"
                android:paddingLeft="@dimen/normal_margin"
                android:paddingTop="@dimen/size_low_margin"
                android:paddingRight="@dimen/normal_margin"
                android:paddingBottom="@dimen/size_low_margin"
                android:text="Términos y Condiciones"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="@dimen/size_low_text"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/social_icons"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/frgProfileSocialFacebook"
                    android:layout_width="@dimen/social_icons"
                    android:layout_height="@dimen/social_icons"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/facebook_logo_button_orange" />

                <ImageView
                    android:id="@+id/frgProfileSocialInstagram"
                    android:layout_width="@dimen/social_icons"
                    android:layout_height="@dimen/social_icons"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/instagram" />

                <ImageView
                    android:id="@+id/frgProfileSocialTwitter"
                    android:layout_width="@dimen/social_icons"
                    android:layout_height="@dimen/social_icons"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/twitter_logo_button_orange" />
            </LinearLayout>

            <TextView
                android:id="@+id/frgProfileExitApp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/icons_size"
                android:paddingLeft="@dimen/normal_margin"
                android:paddingTop="@dimen/size_low_margin"
                android:paddingRight="@dimen/normal_margin"
                android:paddingBottom="@dimen/size_low_margin"
                android:text="Cerrar Sesión"
                android:textAllCaps="true"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/size_low_text"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>