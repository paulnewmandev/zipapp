<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context="com.zipnoticiasec.ap.app.ui.activities.IntroActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/icon_intro"
                android:layout_marginTop="100dp"
                app:srcCompat="@drawable/logo_color" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:text="@string/intro_label"
                android:textAlignment="center"
                android:textColor="@color/primaryZip"
                android:textSize="@dimen/size_title_intro"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/intro_contract"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:text="@string/intro_contract"
                android:textAlignment="center"
                android:textColor="@color/primaryZip"
                android:textSize="@dimen/size_normal_text" />

            <TextView
                android:id="@+id/intro_accept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="48dp"
                android:background="@drawable/rounded_button_orange"
                android:paddingBottom="8dp"
                android:paddingLeft="64dp"
                android:paddingRight="64dp"
                android:paddingTop="8dp"
                android:text="Acepto"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="@dimen/size_normal_text"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/intro_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:background="@drawable/rounded_stroke_button_orange"
                android:paddingBottom="8dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="8dp"
                android:text="No, salir de la App"
                android:textAlignment="center"
                android:textColor="@color/primaryZip"
                android:textSize="@dimen/size_normal_text"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
