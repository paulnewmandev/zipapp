<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itmDiscoverMainView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardBackgroundColor="#fff"
    app:cardCornerRadius="15dp"
    app:cardElevation="5dp"
    app:contentPadding="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/itmDiscoverImage"
            android:layout_width="@dimen/size_discover_list_image"
            android:layout_height="@dimen/size_discover_list_image"
            android:layout_marginRight="@dimen/size_mini_margin"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/itmDiscoverLogoSource"
            android:layout_width="@dimen/icons_size_med"
            android:layout_height="@dimen/icons_size_med"
            android:layout_alignParentRight="true"
            android:src="@drawable/logo_color"
            app:civ_border_color="@color/primaryZip"
            app:civ_border_width="1dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/itmDiscoverImage"
            android:orientation="vertical">

            <TextView
                android:id="@+id/itmDiscoverTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/icons_size_med"
                android:maxLines="2"
                android:text="LA HORA"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/size_low_text"
                android:textStyle="bold"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/itmDiscoverSource"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="LA HORA"
                android:visibility="gone"
                android:textColor="@color/primaryZip"
                android:textSize="@dimen/size_low_text"
                android:textStyle="bold"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/itmDiscoverContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/size_mini_margin"
                android:maxLines="4"
                android:text="@string/long_text"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/size_low_text"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/itmDiscoverDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha Noticia"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/size_mini_text"
                android:textStyle="bold"
                android:layout_weight="1"/>
        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>