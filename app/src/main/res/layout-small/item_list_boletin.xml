<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/itmBoletinMainView"
    android:paddingBottom="4dp">

    <ImageView
        android:id="@+id/itmBoletinImage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_list_image"
        android:scaleType="centerCrop"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/size_low_margin"
        android:layout_marginLeft="@dimen/normal_margin"
        android:layout_marginRight="@dimen/normal_margin"
        android:layout_marginTop="@dimen/size_margin_content"
        app:cardBackgroundColor="#ffff"
        app:cardCornerRadius="16dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/normal_margin">

            <TextView
                android:id="@+id/itmBoletinTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size_low_margin"
                android:text="@string/short_text"
                android:textColor="@android:color/black"
                android:textSize="@dimen/size_title_intro"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/itmBoletinContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size_low_margin"
                android:maxLines="3"
                android:text="@string/long_text"
                android:textColor="@android:color/black"
                android:textSize="@dimen/size_mini_text" />

            <TextView
                android:id="@+id/itmBoletinReadMore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size_low_margin"
                android:gravity="right"
                android:text="leer mÃ¡s..."
                android:textColor="@android:color/black"
                android:textSize="@dimen/size_med_text"
                android:textStyle="bold" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>