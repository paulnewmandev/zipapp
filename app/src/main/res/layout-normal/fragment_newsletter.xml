<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/newsLetterPrev"
            android:layout_width="@dimen/icons_size"
            android:layout_height="@dimen/icons_size"
            android:layout_weight="1"
            app:srcCompat="@drawable/arrow_left" />

        <TextView
            android:id="@+id/newsLetterDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/caslon"
            android:text="Viernes, 5"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/size_big_text" />

        <TextView
            android:id="@+id/newsLetterMonthYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/caslon"
            android:text="@string/date_test"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/size_low_text" />

        <ImageView
            android:id="@+id/newsLetterNext"
            android:layout_width="@dimen/icons_size"
            android:layout_height="@dimen/icons_size"
            android:layout_weight="1"
            app:srcCompat="@drawable/arrow_right" />
    </LinearLayout>

    <ImageView
        android:id="@+id/newsLetterBanner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_toolbar"
        android:scaleType="centerCrop" />

    <include
        layout="@layout/simple_recycler_view"
        layout_width="match_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>